@model EmailRevalidationModel
@{
    Layout = "_ColumnsOne";

    //title
    NopHtml.AddTitleParts(T("PageTitle.AccountActivation").Text);
    //page class
    NopHtml.AppendPageCssClassParts("html-email-revalidation-page");
}

<div class="page-title-top">
    <div class="container">
        <div class="page-title">
            <h1>@T("Account.EmailRevalidation")</h1>
        </div>
    </div>
</div>
<div class="page email-revalidation-page">
    <div class="container">
        <div class="page-body">
            <div class="result">
                @Model.Result
            </div>
            <div class="buttons">
                <a href="@Model.ReturnUrl" class="button-1 facebook-btn btn-primary">@T("Common.Continue")</a>
            </div>
        </div>
    </div>
</div>
