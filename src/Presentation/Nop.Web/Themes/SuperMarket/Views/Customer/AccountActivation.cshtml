@model AccountActivationModel
@{
    Layout = "_ColumnsOne";

    //title
    NopHtml.AddTitleParts(T("PageTitle.AccountActivation").Text);
    //page class
    NopHtml.AppendPageCssClassParts("html-account-activation-page");
}
<div class="page account-activation-page">
    <div class="page-title-top">
        <div class="container">
            <div class="page-title">
                <h1>@T("Account.AccountActivation")</h1>
            </div>
        </div>
    </div>   
    <div class="page-body">
        <div class="container">
            <div class="result">
                @Model.Result
            </div>
            <div class="buttons">
                <a href="@Model.ReturnUrl" class="button-1 btn btn-primary">@T("Common.Continue")</a>
            </div>
        </div>
    </div>
</div>