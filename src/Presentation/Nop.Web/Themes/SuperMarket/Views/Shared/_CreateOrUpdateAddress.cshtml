@model AddressModel

<input class="address-id" asp-for="Id" type="hidden" />
<div class="edit-address form-ui">
    <div class="row">
        <div class="col-md-6">
            <div class="inputs">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="lab-req">
                            <label asp-for="FirstName"></label>
                            <nop-required />
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="FirstName" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="inputs">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="lab-req">
                            <label asp-for="LastName"></label>
                            <nop-required />
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="LastName" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="inputs">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="lab-req">
                            <label asp-for="Email"></label>
                            <nop-required />

                        </div>
                    </div>
                    <div class="col-lg-12">
                        <input class="form-control" asp-for="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
            </div>
        </div>
        @if (Model.CompanyEnabled)
        {
            <div class="col-md-6">
                <div class="inputs">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="lab-req">
                                <label asp-for="Company"></label>
                                @if (Model.CompanyRequired)
                                {
                                    <nop-required />
                                }
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <input class="form-control" asp-for="Company" />
                            <span asp-validation-for="Company"></span>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.CountryEnabled)
        {
            <div class="col-md-6">
                <div class="inputs">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="lab-req">
                                <label asp-for="CountryId"></label>
                                <nop-required />
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <select class="w-100" asp-for="CountryId" asp-items="Model.AvailableCountries"
                                data-trigger="country-select"
                                data-url="@(Url.RouteUrl("GetStatesByCountryId"))"
                                data-stateprovince="#@Html.IdFor(model => model.StateProvinceId)"
                                data-loading="#states-loading-progress"></select>
                            <span asp-validation-for="CountryId"></span>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Model.CountryEnabled && Model.StateProvinceEnabled)
        {
            <div class="col-md-6">
                <div class="inputs">
                    <div class="row">
                        <div class="col-lg-12">
                            <label asp-for="StateProvinceId"></label>
                        </div>
                        <div class="col-lg-12">
                            <select class="w-100" asp-for="StateProvinceId" asp-items="Model.AvailableStates"
                                data-trigger="state-select">
                            </select>
                            <span id="states-loading-progress" style="display: none;" class="please-wait">@T("Common.Wait")</span>
                            <span asp-validation-for="StateProvinceId"></span>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.CountyEnabled)
        {
            <div class="col-md-6">
                <div class="inputs">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="lab-req">
                                <label asp-for="County"></label>
                                @if (Model.CountyRequired)
                                {
                                    <nop-required />
                                }
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <input class="form-control" asp-for="County" />
                            <span asp-validation-for="County"></span>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.CityEnabled)
        {
            <div class="col-md-6">
                <div class="inputs">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="lab-req">
                                <label asp-for="City"></label>
                                @if (Model.CityRequired)
                                {
                                    <nop-required />
                                }
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <input class="form-control" asp-for="City" />
                            <span asp-validation-for="City"></span>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.StreetAddressEnabled)
        {
            <div class="col-md-6">
                <div class="inputs">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="lab-req">
                                <label asp-for="Address1"></label>
                                @if (Model.StreetAddressRequired)
                                {
                                    <nop-required />
                                }
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <input class="form-control" asp-for="Address1" />
                            <span asp-validation-for="Address1"></span>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.StreetAddress2Enabled)
        {
            <div class="col-md-6">
                <div class="inputs">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="lab-req">
                                <label asp-for="Address2"></label>
                                @if (Model.StreetAddress2Required)
                                {
                                    <nop-required />
                                }
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <input class="form-control" asp-for="Address2" />
                            <span asp-validation-for="Address2"></span>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.ZipPostalCodeEnabled)
        {
            <div class="col-md-6">
                <div class="inputs">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="lab-req">
                                <label asp-for="ZipPostalCode"></label>
                                @if (Model.ZipPostalCodeRequired)
                                {
                                    <nop-required />
                                }
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <input class="form-control" asp-for="ZipPostalCode" />
                            <span asp-validation-for="ZipPostalCode"></span>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.PhoneEnabled)
        {
            <div class="col-md-6">
                <div class="inputs">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="lab-req">
                                <label asp-for="PhoneNumber"></label>
                                @if (Model.PhoneRequired)
                                {
                                    <nop-required />
                                }
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <input class="form-control" asp-for="PhoneNumber" />
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.FaxEnabled)
        {
            <div class="col-md-6">
                <div class="inputs">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="lab-req">
                                <label asp-for="FaxNumber"></label>
                                @if (Model.FaxRequired)
                                {
                                    <nop-required />
                                }
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <input class="form-control" asp-for="FaxNumber" />
                            <span asp-validation-for="FaxNumber"></span>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.CustomAddressAttributes.Count > 0)
        {
            @await Html.PartialAsync("_AddressAttributes", Model.CustomAddressAttributes)
        }
    </div>
    @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.AddressBottom, additionalData = Model })
</div>
