@model IList<CategoryModel>

@using Nop.Core.Domain.Catalog

@{
    var supportRtl = await Html.ShouldUseRtlThemeAsync();
    var rtl = supportRtl ? "true" : "false";
}
@if (Model.Count > 0)
{
    <div class="category-grid home-page-category-grid">
        <div class="title"><strong>@T("SS.Category.Title")</strong></div>
        <div class="item-grid owl-carousel" id="homepage-category">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    <div class="category-item">
                        <div class="picture">
                            <a href="@(Url.RouteUrl<Category>(new { SeName = item.SeName }))" title="@item.PictureModel.Title">
                                <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                            </a>
                        </div>
                        <h2 class="title">
                            <a href="@(Url.RouteUrl<Category>(new { SeName = item.SeName }))" title="@item.PictureModel.Title">
                                @item.Name
                            </a>
                        </h2>
                    </div>
                </div>
            }
        </div>
    </div>
    <script asp-location="Footer">
        $(document).ready(function(){
            $('#homepage-category').owlCarousel({
                loop:true,
                margin:10,
                rtl:@rtl,
                responsiveClass:true,
                responsive:{
                    0:{
                        items:1,
                        autoWidth:true,
                        nav:false
                    },
                    991:{
                        items:3,
                        autoWidth:true,
                        nav:false
                    },
                    1000:{
                        items:6,
                        nav:false
                    }
                }
            })
        })
    </script>
}
