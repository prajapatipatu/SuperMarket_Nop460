@model ShoppingCartModel.GiftCardBoxModel
@if (Model.Display)
{
    <div class="giftcard-box">
        <div class="title">
            <strong>@T("Nop.Plugin.InstantOnePageCheckout.ShoppingCart.GiftCardCouponCode")</strong>
        </div>
        <div class="coupon-code">
            <input placeholder="@T("Nop.Plugin.InstantOnePageCheckout.ShoppingCart.GiftCardCouponCode.Tooltip")" name="giftcardcouponcode" id="giftcardcouponcode" type="text" class="gift-card-coupon-code" aria-label="@T("Nop.Plugin.InstantOnePageCheckout.ShoppingCart.GiftCardCouponCode.Label")" />
            <button type="button" name="applygiftcardcouponcode" id="applygiftcardcouponcode" class="button-2 apply-gift-card-coupon-code-button">@T("Nop.Plugin.InstantOnePageCheckout.ShoppingCart.GiftCardCouponCode.Button")</button>
        </div>
        <div id=showgiftcardmessage></div>
    </div>
    <script asp-location="Footer">
        $(document).ready(function() {
            $('#applygiftcardcouponcode').click(function() {
                var giftcardcouponcode = $('#giftcardcouponcode').val();
                OnepageCheckout.applyGiftCardCouponCode(giftcardcouponcode)
            });
        });
    </script>
}