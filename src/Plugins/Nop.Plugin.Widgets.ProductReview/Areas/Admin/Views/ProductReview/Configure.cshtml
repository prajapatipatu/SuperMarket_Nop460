@model ConfigurationModel
@{
    Layout = "_adminLayout";
    NopHtml.SetActiveMenuItemSystemName("SS.Plugin.Widgets.ProductReview");
}

<form asp-controller="ProductReview" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("SS.Plugin.Widgets.ProductReview")
        </h1>
        <div class="float-right">
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync(typeof(StoreScopeConfigurationViewComponent))
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="PictureSize_OverrideForStore" asp-input="PictureSize" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="PictureSize" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="PictureSize" />
                                    <span asp-validation-for="PictureSize"></span>                                    
                                </div>
                            </div>                                                        
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="Active_OverrideForStore" asp-input="MaxPicture" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="MaxPicture" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="MaxPicture" />
                                </div>
                            </div>
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" name="save" id="btnSave" class="btn btn-primary">@T("Admin.Common.Save")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</form>